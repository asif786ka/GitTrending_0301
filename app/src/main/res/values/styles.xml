<resources>
    <!-- https://design.google.com/icons/ -->
    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>

        <item name="windowActionBar">false</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:windowBackground">@color/white</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar"/>

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light"/>

    <style name="MyCustomTabLayout" parent="Widget.Design.TabLayout">
        <item name="tabIndicatorHeight">2dp</item>
        <item name="tabBackground">?attr/selectableItemBackground</item>
        <item name="tabTextAppearance">@style/MyCustomTabTextAppearance</item>
        <item name="tabSelectedTextColor">?android:textColorPrimaryInverse</item>
    </style>

    <style name="MyCustomTabTextAppearance" parent="TextAppearance.Design.Tab">
        <item name="android:textColor">?android:textColorSecondaryInverse</item>
        <item name="textAllCaps">false</item>
    </style>

    <style name="TrendingRepoStyle" parent="Widget.AppCompat.Light.Spinner.DropDown.ActionBar">
        <item name="android:background">?android:selectableItemBackground</item>
        <item name="android:dropDownSelector">?android:selectableItemBackground</item>
        <item name="android:divider">@null</item>
    </style>

    <!-- text style -->
    <style name="TextStyleNormal">
        <item name="android:textSize">@dimen/font_normal</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="TextStyleLarge">
        <item name="android:textSize">@dimen/font_larger</item>
        <item name="android:textColor">@color/textColorPrimary</item>
    </style>

    <style name="TextStylePrimary">
        <item name="android:textSize">@dimen/font_large</item>
        <item name="android:textColor">@color/textColorPrimary</item>
    </style>

    <style name="TextStyleSmall">
        <item name="android:textSize">@dimen/font_normal</item>
        <item name="android:textColor">@color/textColorSmall</item>
    </style>

    <style name="TextGrayStyleSmall">
        <item name="android:textSize">@dimen/font_normal</item>
        <item name="android:textColor">@color/gray</item>
    </style>

    <style name="TextGray600StyleSmall">
        <item name="android:textSize">@dimen/font_normal</item>
        <item name="android:textColor">@color/grey_600</item>
    </style>

    <style name="CollapsedStyle">
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="ExpandedStyle">
        <item name="android:textColor">@color/white</item>
    </style>
</resources>
